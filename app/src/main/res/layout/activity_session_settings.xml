<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".SessionSettingsActivity">

<TextView
    android:id="@+id/textViewTimer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Set Timer (minutes):"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_alignParentStart="true"/>

<EditText
    android:id="@+id/editTextTimer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:hint="3"
    android:layout_toEndOf="@id/textViewTimer"
    android:layout_marginStart="8dp"/>

<CheckBox
    android:id="@+id/checkBoxAnonymous"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Anonymous"
    android:layout_below="@id/textViewTimer"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"/>

<Button
    android:id="@+id/buttonSaveSettings"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Save Settings"
    android:layout_below="@id/checkBoxAnonymous"
    android:layout_marginTop="16dp"
    android:layout_centerHorizontal="true"/>

</RelativeLayout>