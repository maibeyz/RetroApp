<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.viewmodel.SessionActivity">

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/textViewSessionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Session Name "
        android:textAlignment="center"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="707dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Went Well" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerWentWell"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To Improve" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerToImprove"
            android:layout_width="match_parent"
            android:layout_height="209dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Action Items" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerActionItems"
            android:layout_width="match_parent"
            android:layout_height="214dp"
            android:visibility="visible" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextCardContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_marginStart="256dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="87dp"
        android:layout_marginBottom="12dp"
        android:layout_toLeftOf="@+id/buttonAddCard"
        android:hint="Enter card content" />

    <Button
        android:id="@+id/buttonAddCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Card"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"/>

</RelativeLayout>